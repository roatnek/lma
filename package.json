{
  "name": "lma",
  "description": "LMA website",
  "private": true,
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "eslint": "^4.10.0",
    "http-server": "^0.10.0",
    "node-sass": "^4.8.3",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "scripts": {
    "start": "npm run serve && npm run dev",
    "serve": "http-server ./docs/ -o",
    "dev": "npm run watch-build:css",
    "build:css": "node-sass --include-path scss ./src/styles/styles.scss ./docs/assets/styles/styles.css --output-style expanded",
    "watch-build:css": "node-sass -w --include-path scss ./src/styles/styles.scss ./docs/assets/styles/styles.css --output-style expanded",
    "add-css-prefix": "postcss ./docs/assets/styles/styles.css -d ./docs/assets/styles/",
    "test": "npm run test:css && npm run test:js",
    "test:css": "stylelint './docs/assets/styles/**/*.css'; exit 0",
    "test:js": "eslint './src/scripts/**/*.js'; exit 0"
  }
}
